<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragmentV2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_create_your"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_your"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:fontFamily="@font/gilroy_regular"
            android:textColor="@color/textcolour"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_digital_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/digital_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_create_your"
            android:textSize="20sp"
            android:fontFamily="@font/gilroy_bold"
            android:textColor="@color/textcolour"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_edit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_create_your"
            app:layout_constraintBottom_toBottomOf="@+id/tv_digital_card"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_edit"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_company_logo"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_company_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_digital_card" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_company_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/gilroy_bold"
            android:text="@string/company_logo"
            android:textColor="@color/colorCompanyLogo"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_company_logo" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/gilroy_medium"
            android:hint="@string/enter_company_name"
            android:textColor="@color/textcolour"
            android:textSize="12sp"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_company_logo"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imgCardBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_company_name"
            android:background="@color/colorPrimary"
            android:layout_marginTop="24dp"
            android:paddingBottom="24dp"
            android:paddingTop="24dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/colorPalette"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_color_palette"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_camera"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:visibility="gone"
                android:src="@drawable/ic_camera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/imgCardBack"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="8dp"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/gilroy_semibold_24_white"
                android:gravity="center"
                android:hint="@string/enter_name"
                android:maxLength="20"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="4dp"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/colorPalette"
                android:layout_marginTop="16dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                style="@style/gilroy_regular_13_white"
                android:gravity="center"
                android:hint="@string/enter_designation"
                android:maxLength="30"
                android:padding="4dp"
                android:singleLine="true"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mobileNumberCL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/cardInformationBgColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgCardBack"
            android:layout_marginTop="4dp"
            android:padding="8dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_mobile_number"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="56dp"
                android:src="@drawable/ic_call"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_mobile_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="64dp"
                android:background="@null"
                style="@style/gilroy_regular_13"
                android:hint="@string/enter_mobile_number"
                android:singleLine="true"
                android:maxLines="1"
                android:maxLength="10"
                android:inputType="number"
                android:textColor="@color/colorGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_mobile_number"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/emailCL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/cardInformationBgColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mobileNumberCL"
            android:layout_marginTop="4dp"
            android:padding="8dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_email"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="56dp"
                android:src="@drawable/ic_email"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="56dp"
                android:background="@null"
                style="@style/gilroy_regular_13"
                android:hint="@string/enter_email"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_email"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/websiteCL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/cardInformationBgColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailCL"
            android:layout_marginTop="4dp"
            android:padding="8dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_website"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="56dp"
                android:src="@drawable/ic_website"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_website"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="56dp"
                android:background="@null"
                android:hint="@string/enter_website"
                style="@style/gilroy_regular_13"
                android:textColor="@color/colorGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_website"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addressCL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/cardInformationBgColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/websiteCL"
            android:layout_marginTop="4dp"
            android:padding="8dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_location"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="56dp"
                android:src="@drawable/ic_map"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="56dp"
                android:background="@null"
                android:hint="@string/enter_location"
                style="@style/gilroy_regular_13"
                android:textColor="@color/colorGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_location"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ourServicesCL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addressCL"
            android:padding="8dp"
            android:background="@color/cardInformationBgColor">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_our_services"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_services"
                android:layout_marginStart="56dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_our_services"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:hint="@string/our_services"
                android:textColor="@color/colorGray"
                style="@style/gilroy_regular_13"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_arrow"
                app:layout_constraintStart_toEndOf="@+id/img_our_services"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_play"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/socialMediaCL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ourServicesCL">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_fb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_facebook"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_insta"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_instagram"
                app:layout_constraintEnd_toStartOf="@+id/img_twitter"
                app:layout_constraintStart_toEndOf="@+id/img_fb"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_twitter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_twiter_blue"
                app:layout_constraintEnd_toStartOf="@+id/img_linkedIn"
                app:layout_constraintStart_toEndOf="@+id/img_insta"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_linkedIn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_linkedin"
                app:layout_constraintEnd_toStartOf="@+id/img_arrow_icon"
                app:layout_constraintStart_toEndOf="@+id/img_twitter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_arrow_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_play"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_save"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_save_card"
            app:layout_constraintEnd_toStartOf="@+id/img_preview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/socialMediaCL"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_preview"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            android:src="@drawable/ic_preview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/socialMediaCL"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_share"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="64dp"
            android:src="@drawable/ic_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_preview"
            app:layout_constraintTop_toBottomOf="@+id/socialMediaCL"
            />

        <RelativeLayout
            android:id="@+id/progressBarContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
