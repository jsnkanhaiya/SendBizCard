<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/titleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_rate_us"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvExperience"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleImage"
        android:text="@string/experience"
        android:gravity="center"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/textcolour"
        android:layout_marginTop="34dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRateUs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvExperience"
        android:text="@string/rate_us"
        android:gravity="center"
        android:textSize="19sp"
        android:textColor="@color/textcolour"
        android:layout_marginTop="34dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rateGoogleAppImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvRateUs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_google_play_logo"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvImproove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/improve"
        android:gravity="center"
        android:textSize="19sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="50dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvlater"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvImproove"
        android:text="@string/later"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/textcolour"
        android:layout_marginTop="16dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShareApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvlater"
        android:text="@string/shareApp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/textcolour"
        android:layout_marginTop="50dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/shareGoogleAppImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvShareApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_google_play_logo"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
