<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:layout_marginStart="64dp"
    android:layout_marginEnd="64dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_red_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/ic_circle"
        app:layout_constraintTop_toTopOf="@+id/tv_our_service_item"
        app:layout_constraintBottom_toBottomOf="@+id/tv_our_service_item"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_our_service_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/img_remove"
        app:layout_constraintStart_toEndOf="@+id/img_red_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/textcolour"
        android:fontFamily="@font/gilroy_regular"
        android:textSize="16sp"
        />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_remove"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@+id/tv_our_service_item"
        app:layout_constraintBottom_toBottomOf="@+id/tv_our_service_item"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_remove_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>